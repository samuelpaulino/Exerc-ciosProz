def calculadora(num1, num2, operacao):
    if operacao == 1:
        return num1 + num2
    elif operacao == 2:
        return num1 - num2
    elif operacao == 3:
        return num1 * num2
    elif operacao == 4:
        if num2 != 0:
            return num1 / num2
        else:
            print("Erro: Divisão por zero!")
            return 0
    else:
        print("Operação inválida.")
        return 0

# Exemplo de uso:
resultado = calculadora(20, 6, 1)  #Soma: 20 + 5
print(resultado)

resultado = calculadora(20, 6, 5)  #Erro
print(resultado)
